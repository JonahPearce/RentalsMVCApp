@using EntityLibrary.Entities;
@model EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-controller="Account" asp-action="Edit">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username: </label></div>
        <div class="col-sm-4">
            <input asp-for="Username" class="form-control" value="@Model.Username" />
        </div>
        <div class="col">
            <span asp-validation-for="Username"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Email: </label></div>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" value="@Model.Email" />
        </div>
        <div class="col">
            <span asp-validation-for="Email"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Phone: </label></div>
        <div class="col-sm-4">
            <input asp-for="Phone" class="form-control" value="@Model.Phone" />
        </div>
        <div class="col">
            <span asp-validation-for="Phone"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>First Name: </label></div>
        <div class="col-sm-4">
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
        </div>
        <div class="col">
            <span asp-validation-for="FirstName"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Last Name: </label></div>
        <div class="col-sm-4">
            <input asp-for="LastName" class="form-control" value="@Model.LastName" />
        </div>
        <div class="col">
            <span asp-validation-for="LastName"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">
                Save Changes
            </button>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <a asp-controller="Account" asp-action="Profile" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>